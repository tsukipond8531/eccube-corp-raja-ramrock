{% extends 'default_frame.twig' %}

{# {% form_theme form 'Form/form_div_layout.twig' %} #}

{% block stylesheet %}
    <style>
        .ec-registerRole .ec-borderedDefs dl {
            padding: 15px 0;
        }

        @media only screen and (min-width: 768px) {
            .ec-registerRole .ec-borderedDefs dt {
                padding-right: 20px;
            }
            .ec-registerRole .ec-borderedDefs dd {
                padding-left: 20px;
            }
        }
    </style>
{% endblock stylesheet %}

{% block main %}
<div class="ec-modifiedLayoutRole__contents">
    <div class="ec-registerRole">
        <div class="ec-pageHeader">
            <h1>{{ 'アンケート回答確認'|trans }}</h1>
        </div>
        <div class="ec-off1Grid">
            <div class="ec-off1Grid__cell">
                <form method="post" action="{{ url('enquete') }}">
                    {{ form_widget(form._token) }}
                    <div class="ec-borderedDefs">
                        {{ form_widget(form._token) }}
                        <dl>
                            <dt>
                                {{ form_label(form.query1, 'みまもりCUBEを利用するきっかけは？', { 'label_attr': { 'class': 'ec-label' }}) }}
                                <span class="ec-required">必須</span>
                            </dt>
                            <dd>
                                {{ form.query1.vars.data|join(',') }}
                                <div style="display: none;">{{ form_widget(form.query1, { type : 'hidden' }) }}</div>
                            </dd>
                        </dl>
                        <dl>
                            <dt>
                                {{ form_label(form.query2, 'みまもりCUBE知ったきっかけは？', { 'label_attr': { 'class': 'ec-label' }}) }}
                                <span class="ec-required">必須</span>
