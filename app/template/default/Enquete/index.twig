{% extends 'default_frame.twig' %}

{% form_theme form 'Form/form_div_layout.twig' %}

{% block stylesheet %}
    <style>
        .ec-registerRole .ec-borderedDefs dl {
            padding: 15px 0;
        }
        
        .ec-registerRole .ec-borderedDefs dd label {
            display:inline;
        }

        .ec-registerRole .ec-borderedDefs dd label::after {
            content: '\a';
            white-space: pre;
        }

        @media only screen and (min-width: 768px) {
            .ec-registerRole .ec-borderedDefs dt {
                padding-right: 20px;
            }
            .ec-registerRole .ec-borderedDefs dd {
                padding-left: 20px;
            }
        }
    </style>
{% endblock stylesheet %}

{% block main %}
<div class="ec-modifiedLayoutRole__contents">
    <div class="ec-registerRole">
        <div class="ec-pageHeader">
            <h1>{{ 'アンケート回答'|trans }}</h1>
        </div>
        <div class="ec-off1Grid">
            <div class="ec-off1Grid__cell">
                <form method="post" action="{{ url('enquete') }}" novalidate class="h-adr">
                    {{ form_widget(form._token) }}
                    <p class="ec-para-normal">
                        アンケートにご協⼒いただいた⽅には、特典としてキャンペーン価格を330円割引させていただいております。<br />
                        ※カメラ申込時にアンケート割引価格が適⽤されます。
                    </p>
                    <div class="ec-borderedDefs">
                        <dl>
                            <dt>
                                {{ form_label(form.query1, 'みまもりCUBEを利用するきっかけは？(複数回答可)', { 'label_attr': { 'class': 'ec-label' }}) }}
                            </dt>
                            <dd>
                                <div class="ec-checkbox{{ has_errors(form.query1) ? ' error' }}">
                                    {{ form_widget(form.query1) }}
                                    {{ form_errors(form.query1) }}
                                </div>
                            </dd>
                        </dl>
                        <dl>
                            <dt>
                                {{ form_label(form.query2, 'みまもりCUBE知ったきっかけは？(複数回答可)', { 'label_attr': { 'class': 'ec-label' }}) }}
                            </dt>
                            <dd>
                                <div class="ec-checkbox{{ has_errors(form.query2) ? ' error' }}">
                                    {{ form_widget(form.query2) }}
                                    {{ form_errors(form.query2) }}
                                </div>
                            </dd>
                        </dl>
                        <dl>
                            <dt>
                                {{ form_label(form.query3, '具体的にどの様な事が心配ですか？(複数回答可)', { 'label_attr': { 'class': 'ec-label' }}) }}
                            </dt>
                            <dd>
                                <div class="ec-checkbox{{ has_errors(form.query3) ? ' error' }}">
                                    {{ form_widget(form.query3) }}
                                    {{ form_errors(form.query3) }}
                                </div>
                            </dd>
                        </dl>
                        <dl>
                            <dt>
                                {{ form_label(form.query4, 'いつ頃からみまもりカメラを探されていましたか？', { 'label_attr': { 'class': 'ec-label' }}) }}
                            </dt>
                            <dd>
                                <div class="ec-checkbox{{ has_errors(form.query4) ? ' error' }}">
                                    {{ form_widget(form.query4) }}
                                    {{ form_errors(form.query4) }}
                                </div>
                            </dd>
                        </dl>
                        <dl>
                            <dt>
                                {{ form_label(form.query5, '今まで見守り等をする為にご利用になった商品はありますか？', { 'label_attr': { 'class': 'ec-label' }}) }}
                            </dt>
                            <dd>
                                <div class="ec-checkbox{{ has_errors(form.query5) ? ' error' }}">
                                    {{ form_widget(form.query5) }}
                                    {{ form_errors(form.query5) }}
                                </div>
                            </dd>
                        </dl>
                        <dl>
                            <dt>
                                ホームページについて教えてください <br />
