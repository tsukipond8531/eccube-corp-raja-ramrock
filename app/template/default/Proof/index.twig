                                        </div><!-- /.media-body -->
                                        <div class="ec-input{{ has_errors(form.required) ? ' error' }}">
                                            {{ form_widget(form.required, { attr : { style : 'display:none;' } }) }}
                                            {{ form_errors(form.required) }}
                                        </div>
                                    </div><!-- /.media -->
                                </div>
                            </dd>
                        </dl>
                        <dl>
                            <dt>
                                {{ form_label(form.contents, 'その他ご要望等', { 'label_attr': { 'class': 'ec-label' }}) }}
                            </dt>
                            <dd>
                                <div class="ec-input{{ has_errors(form.contents) ? ' error' }}">
                                    {{ form_widget(form.contents) }}
                                    {{ form_errors(form.contents) }}
                                </div>
                            </dd>
                        </dl>
                        {# エンティティ拡張の自動出力 #}
                        {% for f in form|filter(f => f.vars.eccube_form_options.auto_render) %}
